AddDefaultCharset UTF-8
Options -Indexes

RewriteEngine on
RewriteBase /

RewriteCond %{REQUEST_URI} !(^/public/)
RewriteRule ^(.*)$ index.php

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*)$ index.php

